<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu_home"
        android:background="@drawable/card_back_btn"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="192dp"
        android:layout_height="173dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home_assest1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Hello"
        android:textSize="28sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="foodie!"
        android:textColor="@color/purple_500"
        android:textSize="28sp"

        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Which food would you like to cook?"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:fontFamily="sans-serif-black"
        android:text="Categories"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.226"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginTop="324dp"
        android:scrollbars="none"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="135dp"
            android:layout_marginStart="16dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp">


            <ImageView
                android:id="@+id/salad"
                style="@style/catagorystyle"
                android:background="@drawable/category_card_bc"
                app:srcCompat="@drawable/category_salad" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/salad"
                android:layout_alignStart="@id/salad"
                android:layout_alignEnd="@id/salad"
                android:layout_marginStart="16dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="-23dp"
                android:text="Salad"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/Mainimg"
                style="@style/catagorystyle"
                android:background="@drawable/category_card_bc"
                app:srcCompat="@drawable/category_main"
                android:layout_toEndOf="@id/salad"
                android:layout_marginStart="17dp"/>


            <TextView
                android:id="@+id/Main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Mainimg"
                android:layout_alignStart="@id/Mainimg"
                android:layout_alignEnd="@id/Mainimg"

                android:layout_marginTop="3dp"
                android:layout_marginBottom="-23dp"
                android:text="Main"
                android:textSize="17sp"
                android:layout_marginStart="18dp"/>
            <ImageView
                android:id="@+id/drinkimg"
                style="@style/catagorystyle"
                android:background="@drawable/category_card_bc"
                app:srcCompat="@drawable/catergory_drinks"
                android:layout_toEndOf="@id/Mainimg"
                android:layout_marginStart="17dp"/>

            <TextView
                android:id="@+id/drink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/drinkimg"
                android:layout_alignStart="@id/drinkimg"
                android:layout_alignEnd="@id/drinkimg"
                android:layout_marginStart="16dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="-23dp"
                android:text="Drinks"
                android:textSize="17sp" />
            <ImageView
                android:id="@+id/dessertsimg"
                style="@style/catagorystyle"
                android:background="@drawable/category_card_bc"
                app:srcCompat="@drawable/category_dessert"
                android:layout_toEndOf="@id/drinkimg"
                android:layout_marginStart="17dp"/>

            <TextView
                android:id="@+id/desserts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dessertsimg"
                android:layout_alignStart="@id/dessertsimg"
                android:layout_alignEnd="@id/dessertsimg"
                android:layout_marginStart="16dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="-23dp"
                android:text="Desserts"
                android:textSize="17sp" />

        </RelativeLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/Logoutbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/searchbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="88dp"
        android:background="@color/teal_200"
        android:text="search"
        android:textColor="#131212"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bf_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="308dp"
        android:layout_marginBottom="176dp"
        android:text="breakfast"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/Brunch_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Brunch"
        app:layout_constraintBottom_toTopOf="@+id/Lunch_btn"
        app:layout_constraintEnd_toStartOf="@+id/Dinner_btn"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toEndOf="@+id/bf_btn" />

    <Button
        android:id="@+id/Dinner_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="40dp"
        android:text="Dinner"
        app:layout_constraintBottom_toTopOf="@+id/Lunch_btn"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/Lunch_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="96dp"
        android:text="Lunch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/searchbtn" />


</androidx.constraintlayout.widget.ConstraintLayout>